<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout.form">
  <Dialog id="dialogConfig4" title="Configurações" type="Message" draggable="true" titleAlignment="Center">
    <content>

        <HBox justifyContent="Center" alignItems="Center">
          <core:Icon src="sap-icon://light-mode" class="customIconConfig"></core:Icon>
          <Text text="Modo Claro " class="boldText"></Text>
          <Switch id="switchButton4" change="SwitchMode" customTextOff="" customTextOn=""/>
        </HBox>
        
        <HBox justifyContent="Center" alignItems="Center">
          <core:Icon src="sap-icon://customer" class="customIconConfig"></core:Icon>
          <Text text="Visão Cliente " class="boldText"></Text>
          <Switch id="managerViewSwitch4" state="{/isManagerView}" change="onManagerViewChange" customTextOff="" customTextOn=""/>
        </HBox>

        <HBox justifyContent="Center" alignItems="Center">
            <Button text="Voltar" type="Negative" press="onVoltar3" icon="sap-icon://undo"/>
        </HBox>

    </content>
  </Dialog>
</core:FragmentDefinition>